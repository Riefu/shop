/*account css  */
page{
    height: 100%;
}
.fullscreen-nav {
    bottom: 0;
}

.fullscreen {
    position: fixed;
    top: 0px;
    left: 0;
    margin: 0 auto;
    max-width: 640PX;
    right: 0;
    background: #fafafa;
}

.head_box {
    background-image: url("/images/account/account_head_background.jpg");
    width: 100%;
    height: 7.25rem;
    background-size: 100%;
    position: relative;
}
.dl {
      text-align: center;
      overflow: hidden;
      
       display: block;
       -webkit-margin-before: 0px;
       -webkit-margin-after: 1em;
       -webkit-margin-start: 0px;
       -webkit-margin-end: 0px;
}

.dt {
    display: block;

    width: 12.55rem;
    height: 3.55rem;
    border-radius: 3.55rem;
    margin: 1.5rem 2rem auto;
    overflow: hidden;
}


.img{
  float: left;
  width: 3.55rem;
  height: 3.55rem;
  border-radius: 3.55rem;
}

.account_name {

    margin: 1rem 2rem auto; 
    font-size: 15px;
    font-family: "微软雅黑"
}

.account_detail {
    margin-top: 1rem;
    border-top: 0.5px solid #e0e0eb;
    background-color: #fff;
}

.account_order {
    border-bottom: 0.5px solid #e0e0eb; 
    padding: 0.5rem 0.5rem;   
}

.account_order_contet{
      font-size: 13px;
      margin:0.4rem 2rem;
      font-family: "黑体";
    
}

.order_icon{
  width: 1.5rem;
  height: 1.5rem;
  float: left;
}

.order_icon_left{
  margin-top: 0.5rem;
  width: 0.7rem;
  height: 0.7rem;
  float: right;
}

